<body>
    <div class="search-container">
        <h1 class="quintopedia">Quintopédia</h1>
        <div class="search-wrapper">
            <i class="fas fa-search search-icon"></i>
            <input type="text" id="search-input" placeholder="Digite sua pesquisa...">
            <i class="fas fa-times clear-search" id="clear-search"></i>
        </div>
    </div>
    <div class="card-container" id="card-container">
        <!-- Cards serão inseridos aqui dinamicamente -->
    </div>
    <footer>QuintoAndar</footer>

    <script>
        const cards = [
            {
                title: "Fluxo de despublicação de imóveis",
                content: "Em algumas situações, podemos receber relatos de corretores sobre imóveis que não atendem aos padrões de locação do QuintoAndar ou existe algum outro fator que necessita uma atenção especial. Nesses casos, é fundamental compreender quais critérios devem ser avaliados antes de solicitar a despublicação do imóvel.",
                tags: ["Despublicacaodeimoveis", "Despublicação", "Imóvelforadopadrão", "Suspender", "Suspenderanúncio"]
            },
        ];

        const cardContainer = document.getElementById('card-container');
        const searchInput = document.getElementById('search-input');
        const clearSearch = document.getElementById('clear-search');

        function createCard(card) {
            const cardElement = document.createElement('a');
            cardElement.className = 'card';
            cardElement.href = 'https://sites.google.com/quintoandar.com.br/playbookfr/biblioteca/fluxo-de-despublica%C3%A7%C3%A3o-de-im%C3%B3veis';
            cardElement.target = '_blank';
            cardElement.innerHTML = `
                <div class="card-title">
                    <div class="check-circle">
                        <span class="check-mark">&#10003;</span>
                    </div>
                    ${card.title}
                </div>
                <div class="card-content">${card.content}</div>
                <div class="card-tags">
                    ${card.tags.map(tag => `
                        <span class="tag">
                            <img src="https://cdn-icons-png.flaticon.com/128/16/16260.png" alt="tag icon">
                            ${tag}
                        </span>
                    `).join('')}
                </div>
                <div class="card-footer">
                    <img src="https://conteudos.quintoandar.com.br/wp-content/themes/conteudos-quinto-andar-v2/dist/images/newid/quintoandar-logo-newid.svg" alt="QuintoAndar Logo">
                </div>
            `;

            return cardElement;
        }

        function renderCards(searchTerm) {
            cardContainer.innerHTML = '';
            if (searchTerm.trim() === '') {
                return; // Não renderiza nenhum card se a busca estiver vazia
            }
            cards.forEach(card => {
                if (card.title.toLowerCase().includes(searchTerm) ||
                    card.content.toLowerCase().includes(searchTerm) ||
                    card.tags.some(tag => tag.toLowerCase().includes(searchTerm))) {
                    const cardElement = createCard(card);
                    cardContainer.appendChild(cardElement);
                    cardElement.style.display = 'block';
                }
            });
        }

        function toggleClearButton() {
            if (searchInput.value) {
                clearSearch.style.display = 'block';
                setTimeout(() => clearSearch.style.opacity = '0.7', 0);
            } else {
                clearSearch.style.opacity = '0';
                setTimeout(() => clearSearch.style.display = 'none', 300);
            }
        }

        function clearSearchInput() {
            searchInput.value = '';
            toggleClearButton();
            renderCards('');
        }

        searchInput.addEventListener('input', (e) => {
            const searchTerm = e.target.value.toLowerCase();
            renderCards(searchTerm);
            toggleClearButton();
        });

        clearSearch.addEventListener('click', clearSearchInput);
    </script>
</body>
